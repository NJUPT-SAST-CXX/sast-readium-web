{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "fs:default",
    "fs:allow-stat",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$DOCUMENT/*"
        },
        {
          "path": "$DOWNLOAD/*"
        },
        {
          "path": "$DESKTOP/*"
        },
        {
          "path": "$HOME/*"
        },
        {
          "path": "$APPCONFIG/*"
        },
        {
          "path": "$APPDATA/*"
        }
      ]
    },
    "notification:default",
    "process:default",
    "shell:default",
    "shell:allow-spawn",
    "shell:allow-execute",
    "shell:allow-stdin-write",
    "shell:allow-kill"
  ]
}
