{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:default",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$DOCUMENT/*"
        },
        {
          "path": "$DOWNLOAD/*"
        },
        {
          "path": "$DESKTOP/*"
        },
        {
          "path": "$HOME/*"
        },
        {
          "path": "$APPCONFIG/*"
        }
      ]
    },
    "notification:default",
    "process:default"
  ]
}